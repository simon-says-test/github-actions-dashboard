{
  "name": "React Vite Development",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:18",
  "hostRequirements": {
    "cpus": 2
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "npm install",
  "postCreateCommand": "npm install -g vite",
  "customizations": {
    "vscode": {
      "extensions": ["dbaeumer.vscode-eslint", "esbenp.prettier-vscode", "formulahendry.auto-rename-tag"]
    },
    "codespaces": {
      "openFiles": ["src/App.jsx"]
    }
  },
  "portsAttributes": {
    "3000": {
      "label": "React Frontend",
      "onAutoForward": "openPreview"
    },
    "5000": {
      "label": "API Server",
      "onAutoForward": "notify"
    },
    "6006": {
      "label": "Storybook",
      "onAutoForward": "notify"
    }
  },
  "forwardPorts": [3000, 5000, 6006]
}
